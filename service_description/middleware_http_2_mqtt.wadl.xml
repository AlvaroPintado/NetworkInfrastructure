<application xmlns="http://wadl.dev.java.net/2009/02">
  <resources base="http://localhost:8000/">
    <resource path="sensor-data">
      <method name="POST">
        <request>
          <representation mediaType="application/json"/>
        </request>
        <response>
          <representation mediaType="application/json"/>
        </response>
      </method>
    </resource>
    <resource path="logs">
      <method name="GET">
        <response>
          <representation mediaType="text/html"/>
        </response>
      </method>
    </resource>
  </resources>
</application>
